<% if @checklist.errors.any? -%>
  /*Hide the flash notice div*/
  $("#flash_notice").hide(300);

  /*Update the html of the div checklist_errors with the new one*/
  $("#checklist_errors").html("<%= escape_javascript(error_messages_for(@checklist))%>");

  /*Show the div checklist_errors*/
  $("#checklist_errors").show(300);
<% else -%>
  /*Hide the div checklist_errors*/
  $("#checklist_errors").hide(300);

  /*Update the html of the div flash_notice with the new one*/
  $("#flash_notice").html("<%= escape_javascript(flash[:notice])%>");

  /*Show the flash_notice div*/
  $("#flash_notice").show(300);

  /*Clear the entire form*/
  $(":input:not(input[type=submit])").val("");

  /*Replace the html of the div checklist_lists with the updated new one*/
  $("#activity_feed").html("<%= escape_javascript( render "activities/index" ) %>");
  
  /*Close the Modal */
  
  $('#myModalList').modal('hide')
<% end -%>
