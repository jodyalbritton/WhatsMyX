<%- model_class = PhysicalActivityType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:mets) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @physical_activity_types.each do |physical_activity_type| %>
      <tr>
        <td><%= link_to physical_activity_type.id, physical_activity_type_path(physical_activity_type) %></td>
        <td><%= physical_activity_type.code %></td>
        <td><%= physical_activity_type.mets %></td>
        <td><%= physical_activity_type.category %></td>
        <td><%= physical_activity_type.name %></td>
        <td><%=l physical_activity_type.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_physical_activity_type_path(physical_activity_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      physical_activity_type_path(physical_activity_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_physical_activity_type_path,
            :class => 'btn btn-primary' %>
