
  
  <%= simple_form_for @post, :remote => true do |f| %>
  <div id= "post_errors" style="display:none"></div>
  <div class="row">
  <div class="span7">
   <%= f.input :content, :input_html => { :class => 'input-xlarge span5'}, :label => false%>
