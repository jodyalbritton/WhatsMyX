


<div class="row-fluid">
  <div class="span4">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true, :html => {:class=>"well"}) do |f| %>
  <div class="form-inputs">
  	<fieldset>
  		<legend>
  			Create Account
            
        </legend>
    <div class="control-group">
    <%= f.error_notification %>
  	<%= f.input :email, :placeholder => 'user@example.com', :required => true, :autofocus => true %> 
	<%= f.input :name, :required => true  %>
    <%= f.input :username, :required => true, :autofocus => true %>
    <p>
    	Sign up to receive infrequent notifications from WMX. Don't worry, we hate spam as much as you do. 
    	
    </p>
    <%= f.input :opt_in, :label => "Updates" %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
    </div>
  </div>
   
  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
   </fieldset>
  </div>
  <% end %>
  </div>
  <div class="span8">
  </div>
</div>


<%= render "devise/shared/links" %>
