<% unless activity.target.nil? %>

<div class="row activity-item">
	  <div class="activity-controls pull-right">
	   <i class="icon-cog"></i>

      </div>
      <div id="post-sidebar" class="span2">

       <div id="post-avatar" class="span1">
          <%= image_tag activity.user.profile.avatar.url(:thumb), :class=> 'avatar' %>
       </div>
       <div class="post-avatar">
             <h3><%= activity.user.username %></h3>
             <%= time_ago_in_words(activity.created_at) %> ago.
       </div>
  
       </div>
       <div id="post-body" class="span6 post-body">
             <div class="post-content">
              <%= activity.target.text %>
       </div>
     
           
         
              <div class="post-likes">
             <%= activity.target.like_count  %> Propped This    
             <%- if current_user.likes? activity.target -%><%= unlike_link_for activity.target  %>
             <%- else -%>
             <%= like_link_for activity.target %>
             <%- end -%>
              <a href="javascript:toggleDiv('new_comment_<%=activity.target.id %>');" class= "icon-comment">Comment</a>
             </div>
           
        
           




          <div id="comments_list">
          <ul id="comments_<%= activity.target.id %>">
          <%= render_comments activity.target %>
          </ul>
          </div>

         <div id="comment-form">
          <%= render_comments_form activity.target %>
         </div>
    </div>
</div>
<% else %>

<div class="content-removed">

</div>

<% end %>


