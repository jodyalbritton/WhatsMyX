<%- model_class = Ingredient.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:what_food) %></th>
      <th><%= model_class.human_attribute_name(:servings) %></th>
      <th><%= model_class.human_attribute_name(:food_id) %></th>
      <th><%= model_class.human_attribute_name(:serving_size) %></th>
      <th><%= model_class.human_attribute_name(:meal_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= link_to ingredient.id, ingredient_path(ingredient) %></td>
        <td><%= ingredient.what_food %></td>
        <td><%= ingredient.servings %></td>
        <td><%= ingredient.food_id %></td>
        <td><%= ingredient.serving_size %></td>
        <td><%= ingredient.meal_id %></td>
        <td><%=l ingredient.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ingredient_path(ingredient), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ingredient_path(ingredient),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ingredient_path,
            :class => 'btn btn-primary' %>
