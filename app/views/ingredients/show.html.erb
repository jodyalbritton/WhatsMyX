<%- model_class = Ingredient.new.class -%>
<div id="ingredient_container" class="container">
	<div class="row">
		
				<h1 id="show_date"><%= @ingredient.date.strftime("%A, %B %e") %></h1>
				     <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                      edit_ingredient_path, :class => 'btn btn-default' %>
				<%= link_to 'Delete', @ingredient, :method => :delete, :class => "btn btn-danger" %>
		
				<div id="todays_chart" class="offset-by-five"></div>
			
	</div>

		<script>
		var chart;
		var dv_labels = new Array();
		dv_labels['Calories'] = '<%= @dvs[:calories] %> calorie diet.';
		dv_labels['Protein'] = '<%= @dvs[:protein] %>g DV.';
		dv_labels['Fats'] = '<%= @dvs[:total_fat] %>g DV.';
		dv_labels['Carbohydrates'] = '<%= @dvs[:tot_carbs] %>g DV.';
		
	
		var dv_data = new Array();
		dv_data['Calories'] = <%= @dvs[:calories] %>;
		dv_data['Protein'] = <%= @dvs[:protein] %>;
		dv_data['Fat'] = <%= @dvs[:total_fat] %>;
		dv_data['Carbohydrates'] = <%= @dvs[:tot_carbs]%>;
		

	
		$(document).ready(function() {
		   chart = new Highcharts.Chart({
		      chart: {
		         renderTo: 'todays_chart',
		         defaultSeriesType: 'column',
			        width: 400,
							height: 200,
							backgroundColor: 'rgba(0, 0, 0, 0)'
		      },
		      title: {
		         text: 'Today\'s Summary'
		      },
					//None for now
		      // subtitle: { 
		      //    text: ''
		      // },
		      xAxis: {
		         categories: [
		            'Calories',
			    'Protein',
			    'Fats',
			    'Carbohydrates',
								
		         ]
		      },
		      yAxis: {
		         min: 0,
						 max: 200,
		         title: {
		            text: 'Recommendation'
		         },
						labels: {
						            formatter: function() {
						                return this.value +'%';
						            }
						        },
						plotBands: [{ // MAX
						            from: 100,
						            to: 200,
						            color: 'rgba(255, 0, 0, 0.1)',
						            label: {
						               text: '',
						               style: {
						                  color: 'red'
						               }
						            }
						         }, { // MAX
						            from: 0,
						            to: 100,
						            color: 'rgba(0, 255, 0, 0.1)',
						            label: {
						               text: '',
						               style: {
						                  color: 'green'
						               }
						            }
						         }],
						plotLines: [{
						            color: 'red',
						            width: 2,
						            value: 100
						        }],
						gridLineWidth: 0
		      },
			    legend: {
			        enabled: false
			    },
				
		      tooltip: {
		         formatter: function() {
		            return ''+
		               Math.round(this.y/100*dv_data[this.x])+ ' is ' + this.y + '% of a ' + dv_labels[this.x];
		         }
		      },
	
		      plotOptions: {
			       series: {
			            colorByPoint: true
			        },
							line: {
							            lineWidth: 4,
							            states: {
							               hover: {
							                  lineWidth: 5
							               }
							            },
							            marker: {
							               enabled: false,
							               states: {
							                  hover: {
							                     enabled: false
							                  }
							               }   
							            }
							}
		      },
		      series: [{
						 type: 'column',
		         data: [<%= @chart_data %>],
							dataLabels: {
							                enabled: true,
															y: -4,
															formatter: function() {
															                    return Math.round(this.y/100*dv_data[this.x]);
															                },
															color: 'black'
							            }
		      }]                 
		   });                  


		});
		</script>

	
	
			<%= content_tag_for(:div, @this_ingredient) do %>

				

					<% food = Food.find(@ingredient.food_id) %>
<div class="span3 well">

<div>Nutrition Facts</div>
<div>Calories <%= h('%.0f' % (food.calories)) %></div>
		
<div>Calories from Fat <%= h('%.0f' % (food.lipid_total*9))  %></div>					 		
<div>		
 <% if food.umd == 0%>            
  Serving size: <%= h(food.weight_1_desc.blank? ? "100 grams" : "#{food.weight_1_gms} grams") %>
 <% elsif food.umd == 1 %>
   Serving size: <%= h(food.weight_1_desc.blank? ? "100 grams" : "#{food.weight_1_desc}") %>
 <% elsif food.umd == 2 %>
 	Serving size: <%= h(food.weight_1_desc.blank? ? "each" : "#{food.weight_1_desc}") %> 
 <% end %>
</div>	

			

			
 <div class="pull-right"><%= h('%.0f' % (100*food.lipid_total/@dvs[:total_fat])) %>%</div>    
      
       <div class="nut-label">Total Fat <%= h('%.0f' % (food.lipid_total))%>g</div>            
			
 <div class="pull-right"><%= h('%.0f' % (100*food.carbohydrates/@dvs[:tot_carbs])) %>%</div>   
				
	<div class="nut-label">Total Carbs <%= h('%.0f' % (food.carbohydrates)) %>g</div>            
				
  <div class="pull-right"><%= h('%.0f' % (100*food.sugar_total/@dvs[:sugar_total])) %>%</div>   	           
					 
        <div class="nut-label">Sugars <%= h('%.0f' % (food.sugar_total)) %>g</div>            
      
  <div class="pull-right"><%= h('%.0f' % (100*food.fa_sat/@dvs[:fa_sat])) %>%</div>  	
    
  <div class="nut-label">Sat. Fats <%= h('%.0f' % (food.fa_sat)) %>g</div>                
 
  <div class="pull-right"><%= h('%.0f' % (100*food.fiber/@dvs[:fiber])) %>%</div>            			

  <div class="nut-label">Dietary Fiber <%= h('%.0f' % (food.fiber)) %>g</div>            
  
  <div class="pull-right"><%= h('%.0f' % (100*food.cholesterol/@dvs[:cholesterol])) %>%</div>      
     
  <div class="nut-label">Cholesterol <%= h('%.0f' % (food.cholesterol)) %>mg</div>            
   
  <div class="pull-right"><%= h('%.0f' % (100*food.sodium/@dvs[:sodium])) %>%</div>          
                  
        
 <div class="nut-label">Sodium <%= h('%.0f' % (food.sodium)) %>mg</div>          
  
  <div class="pull-right"><%= h('%.0f' % (100*food.protein/@dvs[:protein])) %>%</div>             
               
  <div class="nut-label">Protein <%= h('%.0f' % (food.protein)) %>g</div>            
    
           
      
				 <% if food.calcium != 0.0 %>
  <div class="pull-right"> <%= h('%.0f' % (food.calcium.to_f*100/@dvs[:calcium])) %>%</div>				
	 <div class="nut-label">Calcium</div>      
       
						
				<% else %>
				
				<% end %>
				 <% if !food.iron.nil? %>
					<div class="pull-right"><%= h('%.0f' % (food.iron.to_f*100/@dvs[:iron])) %>%</div>
					       <div class="nut-label">Iron</div>      
					
							
				
				<% else %>
				
				<% end %>					
		
				 <% if !food.vit_c.nil? %>
					<div class="pull-right"> <%= h('%.0f' % (food.vit_c.to_f*100/@dvs[:vit_c])) %>%</div>
					    <div class="nut-label">Vitamin C</div>      
					
							
					
				<% else %>
		
				<% end %>
	</div>
						
		
			<% end %>
		
	<br/>
	
</div>




</div>
