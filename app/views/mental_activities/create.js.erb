  <% if @mental_activity.errors.any? %>
  /*Update the html of the div post_errors with the new one*/
   $("#messages").html("<%= escape_javascript( render "mental_activities/errors", :locals => { :mental_activity => @mental_activity }) %>");
  <% else -%>
  
  /*Replace the html of the div mental_activity_lists with the updated new one*/
  $("#messages").html("<%= escape_javascript( render "layouts/messages" ) %>");
  /*Clear the entire form*/
  
  $('#new_mental_activity')[0].reset();  
 

  /*Replace the html of the div mental_activity_lists with the updated new one*/
  $("#activity_feed").html("<%= escape_javascript( render "activities/index" ) %>");
  
  /*Replace the html of the div mental_activity_lists with the updated new one*/
  $("#mental_activity-list").html("<%= escape_javascript( render "mental_activities/mental_activity" ) %>");
  
  $('#mental_activity-modal').modal('hide');
  
  /* Highlight the new comment */
  $("#mental_activity_<%= @mental_activity.id %>").effect("highlight", {}, 3000);
  <% end %>

