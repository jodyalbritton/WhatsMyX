<div class="row-fluid activity-item">
	  
      <div id="activity-sidebar" class="span2 activity-sidebar">

     
             <%= image_tag @mental_activity.user.profile.avatar.url(:thumb), :class => "avatar" %>
             <h3><%= link_to @mental_activity.user.username, @mental_activity.user %></h3>
             <%= time_ago_in_words(@mental_activity.date) %> ago.
   
      
  
       </div>
       <div id="mental_activity-body" class="span8 activity-body">
             <div class="activity-content">
             <p>
              
              Logged <%= link_to "activity", @mental_activity %> <%= @mental_activity.name %> for <%= @mental_activity.duration %> minutes            
             </p>
             </div>
     
           
     
       
         <div id="expanded_<%= @mental_activity.id %>" class="expanded">
         <div class="expanded-menu row-fluid">
         	<div class="expanded-like-count span2">
         	
         		<%= render "mental_activities/likes", :like_object => @mental_activity%>
         
         	</div>
         	<div class="span2">
         	</div>
         	
         	<div class="span8">
         		<% @mental_activity.activities.each do |activity| %>
         		<% activity.target.likes.each do |likeuser| %>
         		 <%= image_tag likeuser.user.profile.avatar.url(:mini), :class => "avatar" %>
         		<% end %>
         	</div>
         </div>
         <div class="attachment">
         	<% if activity.target.attachment? %>
         	 <%= image_tag activity.target.attachment.url(:medium), :class => "img-polaroid attachment" %>
         	<% end %>
         </div>
         <div class="reply-list">
         	<% activity.replies.each do |reply| %>
         	  <div class="row-fluid">
         	  	<div class="span1 reply-sidebar">
         	  		<%= image_tag reply.user.profile.avatar.url(:mini), :class=> "avatar" %>
         	  	</div>
         	  	<div class="span8">
         	  	<div class="reply-header">
         	  	<div class="reply-time pull-right">
         	  		<i class="icon-time"></i> <%= time_ago_in_words(reply.created_at) %>
         	  	</div>
         	  	<% self_mental_activity = reply.user == current_user %>
         	  	<%= self_mental_activity ? "You" : link_to(reply.user.username) %> said:
         	    
         	  	</div>
         	  	<div class="reply-body">
         	  	<%= reply.text %>
         	  	</div>
         	  	</div>
         	  </div>
         	<% end %>
         	<% end %>
         </div>
         </div> 
     </div>
     <div class="span2 activity-logo" >
     	<div class="activity-logo visible-desktop">
         <i class="icon-book"></i> 
        </div>
    </div>
</div>
             