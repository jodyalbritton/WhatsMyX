<%- model_class = MentalActivityType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mental_activity_types.each do |mental_activity_type| %>
      <tr>
        <td><%= link_to mental_activity_type.name, mental_activity_type_path(mental_activity_type) %></td>
        <td><%= mental_activity_type.category %></td>
     
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mental_activity_type_path(mental_activity_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mental_activity_type_path(mental_activity_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mental_activity_type_path,
            :class => 'btn btn-primary' %>
