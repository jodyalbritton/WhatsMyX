  <% if @pactivity.errors.any? %>
  /*Update the html of the div post_errors with the new one*/
   $("#messages").html("<%= escape_javascript( render "pactivities/errors", :locals => { :pactivity => @pactivity }) %>");
  <% else -%>
  
  /*Replace the html of the div pactivity_lists with the updated new one*/
  $("#messages").html("<%= escape_javascript( render "layouts/messages" ) %>");
  /*Clear the entire form*/
  
  $('#new_pactivity')[0].reset();  
 

  /*Replace the html of the div pactivity_lists with the updated new one*/
  $("#activity_feed").html("<%= escape_javascript( render "activities/index" ) %>");
  
  /*Replace the html of the div pactivity_lists with the updated new one*/
  $("#pactivity-list").html("<%= escape_javascript( render "pactivities/pactivity" ) %>");
  
  $('#pactivity-modal').modal('hide');
  
  /* Highlight the new comment */
  $("#pactivity_<%= @pactivity.id %>").effect("highlight", {}, 3000);
  <% end %>

