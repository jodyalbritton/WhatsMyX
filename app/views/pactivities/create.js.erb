  <% if @pactivity.errors.any? %>
  /*Hide the flash notice div*/
  $("#flash_notice").hide(300);

  /*Update the html of the div pactivity_errors with the new one*/
  $("#flash_errors").html("<%= escape_javascript(render "pactivities/errors") %>");

  /*Show the div pactivity_errors*/
  $("#flash_errors").show(300);

  /*Hide the div pactivity_errors*/
  $("#flash_errors").hide(300);
  <% else -%>
  /*Update the html of the div flash_notice with the new one*/
  $("#flash_notice").append("<%= escape_javascript(flash[:notice])%>");

  /*Show the flash_notice div*/
  $("#flash_notice").show(300);

  /*Clear the entire form*/
  $(":input:not(input[type=submit])").val("");

  /*Replace the html of the div pactivity_lists with the updated new one*/
  $("#activity_feed").html("<%= escape_javascript( render "activities/index" ) %>");
  
  /*Replace the html of the div pactivity_lists with the updated new one*/
  $("#pactivities_list").html("<%= escape_javascript( render @pactivities ) %>");
  
  $('#pactivity-modal').modal('hide');
  <% end %>

