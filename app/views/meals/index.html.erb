<%- model_class = Meal.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

		    	
  <% @meals_by_date.each do |date, meals| %>
 
 <h1> <%= date %> </h1>

   <table class="table table-striped">
   <% meals.group_by { |m| m.mcategory }.sort.each do |mcategory, meals| %>

   <thead>


  	
    <tr>
      <th><%= mcategory.name %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:quanity) %></th>
      <th><%= model_class.human_attribute_name(:units) %></th>
    
    


      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
   
    <% meals.each do |meal| %>

      <tr>
      	<td></td>
        <td><%= link_to meal.name, meal_path(meal) %></td>
       


        <td><%= meal.quanity %></td>
        <td><%= meal.units %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_meal_path(meal), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      meal_path(meal),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
        

        
        
      </tr>
         <% end %>
    <% end %>
  </tbody>
    
</table>
 <% end %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_meal_path,
            :class => 'btn btn-primary' %>
            

