<% if @physical_activity.errors.any? -%>
  $("#flash_notice").hide(300);
  $("#flash_errors").html("<%= escape_javascript(error_messages_for(@physical_activity))%>");
  $("#flash_errors").show(300);
<% else -%>
  $("#flash_errors").hide(300);
  $("#flash_notice").append("<%= escape_javascript(flash[:notice])%>");
  $("#flash_notice").show(300);
  
  
  $('#edit_physical_activity_<%= @physical_activity.id %>')[0].reset();
  $("#physical_activity-list").html("<%= escape_javascript( render "physical_activities/physical_activity" ) %>");
  $("#physical_activity-modal").modal('toggle')
<% end -%>
