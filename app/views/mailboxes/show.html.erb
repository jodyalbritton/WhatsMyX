<% content_for :top_right do %>
  <a data-toggle="modal" class="btn btn-primary" href="#dm-modal"><i class="icon-envelope"></i></a>
<% end %>
<ul class="nav nav-tabs">
  <li class="active"><a href="#inbox" data-toggle="tab">Inbox <span class="badge"><%= @messages.count %></span></a></li>
  <li><a href="#sent" data-toggle="tab">Sent <span class="badge"><%= @sent_messages.count %> </span></a> </li>
  <li><a href="#notifications" data-toggle="tab">Notifications <span class="badge"><%= @notifications.count %></span></a></li>
  </ul>

  <div class="tab-content">
 
  <div class="tab-pane active" id="inbox">
  	
  		<%= render :partial => "mailboxes/inbox" %>
 
  </div>
   <div class="tab-pane" id="sent">
        <%= render :partial => "mailboxes/sent" %>
  </div>
  <div class="tab-pane" id="notifications">
        <%= render :partial => "mailboxes/notifications" %>
  </div>
  </div>
  <div class="modal hide fade" id="dm-modal">
       <%= render "messages/form"%>
  </div>