   <% content_for :top_left do %>
   <h2>Groups</h2>
   <% end %>
   <% content_for :sidebar do %>
     <div id="group-sidebar">
     
      <hr>
      <div class="groups-menu">
      	<%= link_to "Start a Group", new_group_path %>
      </div>
     </div>
     <% end %>
   
      
    
    
       
       <div class="group-controls">
       <ul class="nav nav-tabs flush" id="myTab">
       <li class="active"><a href="#my-groups" data-toggle="tab">My Groups</a></li>
       <li><a href="#all-groups" data-toggle="tab">All Groups</a></li>
       </ul>

       </div>

        <div class="tab-content">
   
        <div class="tab-pane active" id="my-groups">
        <div class="row-fluid">
            <%=render "my-groups-item"%>
        </div>
        </div>
        <div class="tab-pane" id="all-groups">
        	<%= render "group-item" %>
        </div>
        </div>
        </div>

  

        
      
    




