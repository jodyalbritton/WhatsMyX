 <% @parent = @group.id %>
<% content_for :sidebar do %>
<div id="groups-sidebar" class="menu">

<div id="group-about">
	
	<h2>
		About
	</h2>
	<%= @group.description %>
    <% if current_user == @group.user %>
	<%= link_to 'Edit', edit_group_path(@group) %> |
	<% end %>

</div>

<div id="group-owner">	
	<h2>
		Owner
	</h2>
  <%= @group.user.username %>
</p>

</div>

<div id="group-privacy">
	<h2>
		Group Privacy
	</h2>
  <%= @group.privacy_level %>
</p>

</div>

<div id="group-active">
  	<h2>
		Group Status
	</h2>
  <% if @group.active == true %>
  Active
  <% else %>
  Not Active
  <% end %>
</p>
</div>

<div id="group-members">
		<h2>
		Group Members
	</h2>
      
     
     <% @members.each do |x| %> 
      <%= image_tag x.user.profile.avatar.url(:mini) %>
    
     <% end %>
</div>

            
  </div>    
<% end %>
<% content_for :top_left do %>
  <div id="profile-name">
  	           <div class="row-fluid">
  	           	<div class="span2">
  	           		<%= image_tag @group.avatar.url(:thumb), :class => "group-pic"%>
  	            </div>
  	            <div class="span3">
               <h3><%= @group.name %></h3>
	            <% if @current_memberships == 0 %>
                <% if user_signed_in? %>
                <div id="join_group">
              <%= simple_form_for ([@group, @new_membership]) do |f| %>
              <%= f.button :submit,  'Join Group', :class => 'btn btn-primary' %>
              <%= f.input :user_id, :as=> 'hidden', :input_html => {:value => current_user}%>

              <% end %>
                
                </div>
                <% end %> 
                <% else %>
                 <div id="leave_group">
           
                 <% @membership.each do |membership| %>
                 <%= link_to "Leave Group",  ([@group, membership]), confirm: 'Are you sure?', :class=>"btn btn-danger", method: :delete %>
                 <% end %>
                 </div>
                <% end %>
        </div>
        </div>
        </div>
<% end %>
<% content_for :top_right do %>
  <div  id="group-header">
   
      
        <div id="group-merit" class="pull-right visible-desktop">
        
         <ul>
        
          <li>
            
              <strong> <%= @group.memberships.count %> </strong>
              Members
            

          </li>
 </div>
  </div>
 <% end %>
<% content_for :top do %>
<% unless @current_memberships == 0 %>
<div id="posts_form"><%= render :partial => 'posts/form' %></div>


<% end %>



<% end %>


<div id="groups-body">
 




     <% if @group.privacy_level == "PUBLIC" %>
      <div id="activity_feed"><%= render "activities/index" %></div>
      <% elsif @group.privacy_level == "RESTRICTED"%>
      <% unless @current_memberships == 0 %>
      <div id="activity_feed"><%= render "activities/index" %></div>
      <%= paginate @activities%>
      <% end %>
      <% end %>

  






  </div>
 

     








