<%= simple_form_for @stat, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :stype %>
  <%= f.input :value %>
  <%= f.input :date %>
  <%= f.input :category_id %>
  <%= f.input :stype_id %>
  <%= f.input :sunit %>
  <%= f.input :user_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stats_path, :class => 'btn' %>
  </div>
<% end %>
