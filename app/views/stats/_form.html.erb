<%= simple_form_for (@stat), :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.input :stype ,:placeholder => "Start Typing....", :as => :autocomplete,  :url => autocomplete_category_name_stats_path, :update_elements => {:id => "#stat_category_id", :sunit => "#stat_sunit"} %>
	 
	  <%= f.input :value %>
	   <%= f.input :sunit, :label => "Units"%>
	  <%= f.input :date  %>
	  <%= f.input :category_id, :as => "hidden"%>
	  
	 

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stats_path, :class => 'btn' %>
  </div>
<% end %>
