<% reply = defined?(reply) ? reply : false %>
 
<div class="row comment-item span6" id="comment_<%= comment.id %>">
	  
       <div id="comment-sidebar" class="span0">
        <%= image_tag comment.owner.profile.avatar.url(:mini) %>
       </div>

       <div id="comment-content" class="span5">
          <div class="comment-body">
            <li>
            <p>
            <%= comment.owner.username %> Said: 
            <%= comment.body %>
            </p>
          </div>
          <div class="row comment-footer"> 
            
            
             <div class="comment-likes">
             <%= time_ago_in_words(comment.created_at) %> ago.
             
             <%- if current_user.likes? comment -%><%= unlike_link_for comment  %>
             <%- else -%>
             <%= like_link_for comment %>
             <%- end -%>
              
              (<%= comment.like_count %> Given)
             
              <% if current_user == comment.owner %>
              <% end %>
          
              <%= link_to "Delete", comment_path(comment), :method => :delete, :remote => true,  :class=> "icon-trash" %> 
              </div>
              <%# this enables only 1 level of replies %>
              <% if Opinio.accept_replies && !reply %>
              <div class="commemnt-reply">
              <%= link_to t('opinio.actions.reply'), reply_comment_path(comment), :remote => true %>
              <ul id="comment_<%= comment.id %>_replies" class="replies">
              <%= render :partial => "opinio/comments/comment", :collection => comment.comments, :locals => {:reply => true} %>
              </ul>
              </div>
              <% end %>
              </li>
          </div>
       </div>
 
</div>


