      <% @goals.each do |goal|%>
       <tr>
        
        <td><%= goal.category.name %></td>
        <td>goal of <%= goal.value %> <%= goal.category.sunit %></td>
      
     
        <td>
          <%= link_to 'Edit', edit_goal_path(goal), :remote => true, :class=> "btn btn-mini"%>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      goal_path(goal),
                      :method => :delete,
                      :remote => true,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <% end %>
